pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SanZer3/angular_app.git'
            }
        }

        stage('Test') {
            steps {
                script {
                    // Exécuter les tests unitaires et les tests d'intégration
                    sh 'npm install'
                    sh 'npm run test'
                }
            }
        }

    post {
        success {
            echo 'Déploiement réussi !'
        }
        failure {
            echo 'Échec du déploiement !'
        }
    }
}
